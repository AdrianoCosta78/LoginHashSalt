@{
    ViewBag.Title = "Login";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<style>
    body {
        background-color: #191970;
    }
</style>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow p-4" style="width: 100%; max-width: 400px;">
        <h2 class="text-center mb-4">Acessar Conta</h2>

        @if (ViewBag.Mensagem != null)
        {
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle"></i> @ViewBag.Mensagem
            </div>
        }

        <form method="post">
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" class="form-control" name="email" placeholder="Digite seu email" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Senha</label>
                <input type="password" class="form-control" name="senha" placeholder="Digite sua senha" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Entrar</button>
        </form>

        <div class="text-center mt-3">
            <a href="@Url.Action("Cadastro", "Conta")">Não tem conta? Cadastre-se</a><br />
            <a href="@Url.Action("EsqueciSenha", "Conta")" class="text-muted">Esqueceu sua senha?</a>
        </div>
    </div>
</div>
