@{
    ViewBag.Title = "Esqueci Minha Senha";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h2 class="text-center mb-4">Recuperar Senha</h2>

            @if (ViewBag.Mensagem != null)
            {
                <div class="alert alert-info">@ViewBag.Mensagem</div>
            }

            <form method="post">
                <div class="mb-3">
                    <label for="email" class="form-label">Email cadastrado:</label>
                    <input type="email" class="form-control" name="email" required />
                </div>
                <button type="submit" class="btn btn-primary w-100">Enviar link de recuperação</button>
            </form>

            <p class="mt-3 text-center">
                <a href="@Url.Action("Login", "Conta")">Voltar para o login</a>
            </p>
        </div>
    </div>
</div>
