@{
    ViewBag.Title = "Redefinir Senha";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h2 class="text-center mb-4">Nova Senha</h2>

            @if (ViewBag.Mensagem != null)
            {
                <div class="alert alert-info">@ViewBag.Mensagem</div>
            }

        <form method="post">
            <input type="hidden" name="token" value="@ViewBag.Token" />

            <div class="mb-3">
                <label for="novaSenha" class="form-label">Nova senha:</label>
                <input type="password" class="form-control" name="novaSenha" required />
            </div>
            <div class="mb-3">
                <label for="confirmaSenha" class="form-label">Confirmar senha:</label>
                <input type="password" class="form-control" name="confirmarSenha" required />
            </div>
            <button type="submit" class="btn btn-success w-100">Redefinir senha</button>
        </form>

            <p class="mt-3 text-center">
                <a href="@Url.Action("Login", "Conta")">Voltar para o login</a>
            </p>
        </div>
    </div>
</div>
